.cadillacs
  max-width 1170px
  padding 80px 0
  margin 0 auto
  border-bottom 1px solid rgba(208,212,216,.5)
  box-sizing border-box

.cadillacs__heading
  margin-bottom 44px
  font-family "Georgia Regular", Arial, sans-serif
  font-size 32px
  line-height 38px
  font-weight 400
  color #4E5665
  text-align center

.cadillacs__image
  width 100%
  position relative
  margin-bottom 50px

  &::after
    content ""
    width 100%
    height 7px
    opacity 0.2
    border-radius 50%
    background-color #212020
    position absolute
    bottom 0
    left 0

.cadillacs__photo
  max-width 100%
  height auto

.cadillacs__content
  width 100%
  max-width 970px
  margin 0 auto
  font-family "Helvetica Regular", Arial, sans-serif
  font-size 16px
  line-height 28px
  color #505050

@media (max-width: $tablet)
  .cadillacs
    max-width 800px
    padding 0 50px

