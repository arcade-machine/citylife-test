.navigation-footer
  margin-bottom 90px
  flex-grow 1

.navigation-footer__list
  padding 0
  margin 0
  display flex
  justify-content space-around

.navigation-footer__item
  display flex
  flex-direction column

.navigation-footer__heading
  padding 0
  margin 0
  margin-bottom 20px
  font-family "Helvetica Regular", Arial, sans-serif
  font-size 15px
  line-height 20px
  font-weight 400
  text-transform uppercase
  color #4E5665

.navigation-footer__link
  margin-bottom 8px
  font-family "Helvetica Regular", Arial, sans-serif
  font-size 14px
  line-height 19px
  color #505050
  text-decoration none
  transition all 0.2s ease-out

  &:hover
    color #ECB84C
    text-decoration underline