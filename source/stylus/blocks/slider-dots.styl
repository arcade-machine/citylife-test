.slider-dots
  width 56px
  padding 0
  margin 0
  list-style none
  display flex
  justify-content space-between
  position absolute
  left 50%
  bottom 100px
  transform translateX(-50%)
  z-index 3

.slider-dots__dot
  width 12px
  height 12px
  padding 0
  margin 0
  border none
  border-radius 50%
  background-color rgba(255, 255, 255, 0.2)
  cursor pointer
  transition all 0.4s ease-out

  &--current
    background-color #FFFFFF