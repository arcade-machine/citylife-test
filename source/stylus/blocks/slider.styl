.slider
  width 100%
  min-height 480px
  margin-bottom 80px
  position relative
  overflow hidden

.slider__item
  box-shadow  0 2px 24px rgba(0, 0, 0, 0.2)
  position absolute
  transition all 0.4s ease-out
  top 50%

.slider__image
  width 100%
  height 100%

.slider__controls
  width 720px
  height 480px
  z-index 4
  position absolute
  left 50%
  top 50%
  transform translate(-50%, -50%)

.slider__arrow
  width 80px
  height 80px
  border-radius 50%
  border none
  background-color #ECB84C
  background-image url("../img/icons/icon-arrow.svg")
  background-repeat no-repeat
  background-position 50% 50%
  position absolute
  top 50%
  cursor pointer

  &:active
    background-color #FFCF6A

  &--left
    left 0
    transform translateY(-50%)

  &--right
    right 0
    transform translateY(-50%) rotate(180deg)